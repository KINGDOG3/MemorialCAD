<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props"
          Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />

  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">x64</Platform>
    <ProjectGuid>{A1B2C3D4-E5F6-7890-ABCD-EF1234567890}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <AssemblyName>MemorialDescritivo</AssemblyName>
    <RootNamespace>MemorialPlugin</RootNamespace>
    <TargetFrameworkVersion>v4.8</TargetFrameworkVersion>
    <LangVersion>7.3</LangVersion>
    <!--
      ╔══════════════════════════════════════════════════════════╗
      ║  AJUSTE AQUI: caminho de instalação do Civil 3D 2024     ║
      ║  Padrão: C:\Program Files\Autodesk\AutoCAD 2024          ║
      ╚══════════════════════════════════════════════════════════╝
    -->
    <Civil3DPath>C:\Program Files\Autodesk\AutoCAD 2024</Civil3DPath>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|x64' ">
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <Optimize>false</Optimize>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|x64' ">
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <Optimize>true</Optimize>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <!-- ═══ Referências do .NET Framework ══════════════════════════ -->
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="WindowsBase" />
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <!-- ═══ DLLs do AutoCAD / Civil 3D (não copiar para output) ═══ -->
  <ItemGroup>
    <Reference Include="accoremgd">
      <HintPath>$(Civil3DPath)\accoremgd.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="acdbmgd">
      <HintPath>$(Civil3DPath)\acdbmgd.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="acmgd">
      <HintPath>$(Civil3DPath)\acmgd.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="AecBaseMgd">
      <HintPath>$(Civil3DPath)\AecBaseMgd.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="AeccDbMgd">
      <HintPath>$(Civil3DPath)\AeccDbMgd.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

  <!-- ═══ Pacotes NuGet ═══════════════════════════════════════════ -->
  <ItemGroup>
    <Reference Include="DocumentFormat.OpenXml">
      <HintPath>packages\DocumentFormat.OpenXml.2.20.0\lib\net46\DocumentFormat.OpenXml.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="ClosedXML">
      <HintPath>packages\ClosedXML.0.102.2\lib\net46\ClosedXML.dll</HintPath>
      <Private>True</Private>
    </Reference>
  </ItemGroup>

  <!-- ═══ Arquivos de código-fonte ════════════════════════════════ -->
  <ItemGroup>
    <Compile Include="src\GeradorDocx.cs" />
    <Compile Include="src\GeradorXlsx.cs" />
    <Compile Include="src\MemorialPlugin.cs" />
    <Compile Include="wpf\JanelaMemorial.cs">
      <DependentUpon>JanelaMemorial.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <!-- ═══ Arquivo XAML ════════════════════════════════════════════ -->
  <ItemGroup>
    <Page Include="wpf\JanelaMemorial.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <!-- ═══ Arquivo packages.config (NuGet clássico) ════════════════ -->
  <ItemGroup>
    <None Include="packages.config" />
  </ItemGroup>

  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <Import Project="$(MSBuildToolsPath)\Microsoft.WinFX.targets"
          Condition="Exists('$(MSBuildToolsPath)\Microsoft.WinFX.targets')" />

</Project>
